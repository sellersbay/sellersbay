{% extends 'base.html.twig' %}

{% block title %}Support - RoboSEO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/mantis/css/mantis-bootstrap.css') }}">
    <style>
        body {
            background-color: #f5f7fb;
        }
        
        .support-form {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        
        .form-header {
            margin-bottom: 2rem;
            text-align: center;
        }
        
        .form-header h2 {
            color: #0d6efd;
            margin-bottom: 0.5rem;
        }
        
        .alert {
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="support-form">
        <div class="form-header">
            <h2>Support Request</h2>
            <p class="text-muted">Submit your question or issue and our team will get back to you as soon as possible.</p>
        </div>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <form action="{{ path('app_support_submit') }}" method="POST">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{ user_name }}" required>
                </div>
                <div class="col-md-6">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{ user_email }}" required>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" required>
            </div>
            
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary me-md-2">Cancel</a>
                <button type="submit" class="btn btn-primary">Submit Request</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}