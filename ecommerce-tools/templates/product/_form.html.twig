{% apply spaceless %}
<form method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" 
               class="form-control" 
               id="name" 
               name="name" 
               value="{{ product.name|default('') }}"
               required>
        <div class="invalid-feedback">
            Please provide a product name.
        </div>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Full Description</label>
        <textarea class="form-control" 
                  id="description" 
                  name="description" 
                  rows="5" 
                  required>{{ product.description|default('') }}</textarea>
        <div class="invalid-feedback">
            Please provide a product description.
        </div>
        <div class="form-text">
            This description will be enhanced with AI-generated SEO content.
        </div>
    </div>

    <div class="mb-3">
        <label for="shortDescription" class="form-label">Short Description</label>
        <textarea class="form-control" 
                  id="shortDescription" 
                  name="shortDescription" 
                  rows="2">{{ product.shortDescription|default('') }}</textarea>
        <div class="form-text">
            A brief summary of your product (optional).
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_products') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Save') }}
        </button>
    </div>
</form>

<script>
// Form validation
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script>
{% endapply %}