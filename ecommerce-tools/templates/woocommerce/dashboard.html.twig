    // Fetch product details from API
    function fetchProductDetails(productId) {
        const url = new URL('{{ path('app_woocommerce_import') }}', window.location.origin);
        url.searchParams.append('action', 'get_product');
        url.searchParams.append('product_id', productId);
        url.searchParams.append('_t', Date.now()); // Prevent caching
        
        console.log('Fetching product details from URL:', url.toString());
        
        fetch(url, {
            method: 'GET',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Accept': 'application/json'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! Status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log('Product data received:', data);
            
            if (data.success) {
                if (data.product) {
                    displayProductPreview(data.product);
                    
                    // Refresh close and refresh handlers after data is loaded
                    setupCloseHandlers();
                    setupRefreshHandler();
                } else {
                    throw new Error('Product data not found in response');
