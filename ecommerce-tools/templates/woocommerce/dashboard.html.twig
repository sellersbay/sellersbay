{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Imported Products Tab Process AI Functionality
    initializeCheckboxes(
        'selectAllImported', 
        '.product-checkbox', 
        'processAiBtn', 
        'selectedCount', 
        'processForm'
    );
    
    // Imported Products Tab Delete Functionality
    initializeCheckboxes(
        'selectAllImported', 
        '.product-checkbox', 
        'deleteImportedBtn', 
        'selectedDeleteImportedCount', 
        'processForm'
    );
    
    // Staged Products Tab Functionality
    initializeCheckboxes(
        'selectAllStaged', 
        '.staged-checkbox', 
        'deleteStagedBtn', 
        'selectedStagedCount', 
        'stagedForm'
    );
    
    // Exported Products Tab Functionality
    initializeCheckboxes(
        'selectAllExported', 
        '.exported-checkbox', 
        'deleteBtn', 
        'selectedDeleteCount', 
        'deleteForm'
    );
    
    // Function to initialize checkbox functionality for a tab
    function initializeCheckboxes(selectAllId, checkboxClass, buttonId, countId, formId) {
        const selectAllCheckbox = document.getElementById(selectAllId);
        if (!selectAllCheckbox) return; // Exit if element doesn't exist
        
        const checkboxes = document.querySelectorAll(checkboxClass);
        const actionButton = document.getElementById(buttonId);
        const countBadge = document.getElementById(countId);
        
        // Function to update the selected count and button state
        function updateCount() {
            const checkedBoxes = document.querySelectorAll(`${checkboxClass}:checked`);
            const count = checkedBoxes.length;
            
            // Update count badge
            countBadge.textContent = `(${count})`;
            
            // Enable or disable the button
            actionButton.disabled = count === 0;
        }
        
        // Add event listener to the "Select All" checkbox
        selectAllCheckbox.addEventListener('change', function() {
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            
            updateCount();
        });
        
        // Add event listeners to individual checkboxes
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                // If any checkbox is unchecked, uncheck "Select All"
                if (!this.checked) {
                    selectAllCheckbox.checked = false;
                } 
                // If all checkboxes are checked, check "Select All"
                else if (document.querySelectorAll(`${checkboxClass}:not(:checked)`).length === 0) {
                    selectAllCheckbox.checked = true;
                }
                
                updateCount();
            });
        });
        
        // Initialize the count on page load
        updateCount();
        
        // Form submission with loading state
        const form = document.getElementById(formId);
        if (form) {
            form.addEventListener('submit', function(e) {
                const checkedBoxes = document.querySelectorAll(`${checkboxClass}:checked`);
                if (checkedBoxes.length === 0) {
                    e.preventDefault();
                    return;
                }
                
                // Show loading state
                actionButton.disabled = true;
                
                // Set specific loading text based on button type
                if (buttonId === 'processAiBtn') {
                    actionButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...';
                } else if (buttonId === 'deleteBtn') {
                    actionButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deleting...';
                }
            });
        }
    }
});
</script>
