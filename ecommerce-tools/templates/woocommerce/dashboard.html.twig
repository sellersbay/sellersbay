{% extends 'base.html.twig' %}

{% block title %}WooCommerce Dashboard - RoboSEO{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <h1 class="h3 mb-0">WooCommerce Integration</h1>
                            {% if is_granted('ROLE_PREMIUM') %}
                                <span class="badge bg-success ms-3 d-flex align-items-center">
                                    <i class="fas fa-crown me-1"></i> Premium
                                </span>
                            {% else %}
                                <span class="badge bg-secondary ms-3 d-flex align-items-center">
                                    <i class="fas fa-user me-1"></i> Regular
                                </span>
                            {% endif %}
                        </div>
                        <div>
                            <a href="{{ path('app_woocommerce_connect') }}" class="btn btn-primary">
                                <i class="fas fa-plug"></i> Connect Store
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    {% for flash_success in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">{{ flash_success }}</div>
                    {% endfor %}

                    {% if products is empty %}
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-store fa-4x text-muted"></i>
                            </div>
                            <h3>No Products Imported Yet</h3>
                            <p class="text-muted">
                                Connect your WooCommerce store and import products to get started.
                            </p>
                            <div class="mt-4">
                                <a href="{{ path('app_woocommerce_import') }}" class="btn btn-primary btn-lg">
                                    <i class="fas fa-download"></i> Import Products
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <!-- Filter Section -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-filter"></i> Filter Products</h5>
                            </div>
                            <div class="card-body">
                                <form action="{{ path('app_woocommerce_dashboard') }}" method="get" class="row g-3">
                                    <div class="col-md-4">
                                        <label for="category" class="form-label">Category</label>
                                        <select name="category" id="category" class="form-select">
                                            <option value="">All Categories</option>
                                            {% for category in categories %}
                                                <option value="{{ category }}" {% if filter_category == category %}selected{% endif %}>{{ category }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="keyword" class="form-label">Search by Keyword</label>
                                        <input type="text" name="keyword" id="keyword" class="form-control" placeholder="Enter keyword..." value="{{ filter_keyword }}">
                                    </div>
                                    <div class="col-md-4 d-flex align-items-end">
                                        <div class="d-grid gap-2 d-md-flex w-100">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-filter"></i> Apply Filter
                                            </button>
                                            <a href="{{ path('app_woocommerce_dashboard') }}" class="btn btn-outline-secondary">
                                                <i class="fas fa-undo"></i> Reset
                                            </a>
                                        </div>
                                    </div>
                                </form>
                                
                                {% if filter_category or filter_keyword %}
                                <div class="mt-3">
                                    <div class="alert alert-info mb-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>Active filters:</strong>
                                                {% if filter_category %}<span class="badge bg-primary me-2">Category: {{ filter_category }}</span>{% endif %}
                                                {% if filter_keyword %}<span class="badge bg-info me-2">Keyword: {{ filter_keyword }}</span>{% endif %}
                                            </div>
                                            <a href="{{ path('app_woocommerce_dashboard') }}" class="btn btn-sm btn-light">
                                                <i class="fas fa-times"></i> Clear All Filters
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- Product Section Tabs -->
                        <ul class="nav nav-tabs mb-4" id="productTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="imported-tab" data-bs-toggle="tab" 
                                        data-bs-target="#imported" type="button" role="tab" 
                                        aria-controls="imported" aria-selected="true">
                                    Imported Products
                                    <span class="badge bg-primary rounded-pill ms-2">
                                        {{ products|filter(p => p.status == 'imported')|length }}
                                    </span>
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="staged-tab" data-bs-toggle="tab" 
                                        data-bs-target="#staged" type="button" role="tab" 
                                        aria-controls="staged" aria-selected="false">
                                    Staged Products
                                    <span class="badge bg-info rounded-pill ms-2">
                                        {{ products|filter(p => p.status == 'ai_processed')|length }}
                                    </span>
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="exported-tab" data-bs-toggle="tab" 
                                        data-bs-target="#exported" type="button" role="tab" 
                                        aria-controls="exported" aria-selected="false">
                                    Exported Products
                                    <span class="badge bg-success rounded-pill ms-2">
                                        {{ products|filter(p => p.status == 'exported')|length }}
                                    </span>
                                </button>
                            </li>
                        </ul>
                        
                        <!-- Tab Content -->
                        <div class="tab-content" id="productTabsContent">
                            <!-- Imported Products Tab -->
                            <div class="tab-pane fade show active" id="imported" role="tabpanel" aria-labelledby="imported-tab">
                                <form id="processForm" method="post" action="{{ path('app_woocommerce_process_ai') }}">
                                    <div class="mb-3 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="selectAllImported">
                                            <label class="form-check-label" for="selectAllImported">
                                                Select All Products
                                            </label>
                                        </div>
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-success" id="processAiBtn" disabled>
                                                <i class="fas fa-robot"></i> Process with AI
                                                <span id="selectedCount" class="badge bg-light text-dark ms-1">(0)</span>
                                            </button>
                                            <button type="submit" class="btn btn-danger" id="deleteImportedBtn" disabled formaction="{{ path('app_woocommerce_delete') }}">
                                                <i class="fas fa-trash"></i> Delete
                                                <span id="selectedDeleteImportedCount" class="badge bg-light text-dark ms-1">(0)</span>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th style="width: 40px;"></th>
                                                    <th>ID</th>
                                                    <th>WooCommerce ID</th>
                                                    <th>Name</th>
                                                    <th>Last Updated</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set importedProducts = products|filter(p => p.status == 'imported') %}
                                                {% if importedProducts is empty %}
                                                    <tr>
                                                        <td colspan="6" class="text-center py-4">
                                                            <p class="text-muted mb-0">No imported products waiting for processing.</p>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    {% for product in importedProducts %}
                                                        <tr>
                                                            <td>
                                                                <div class="form-check">
                                                                    <input class="form-check-input product-checkbox" 
                                                                           type="checkbox" name="product_ids[]" 
                                                                           value="{{ product.id }}" id="product_{{ product.id }}">
                                                                </div>
                                                            </td>
                                                            <td>{{ product.id }}</td>
                                                            <td>{{ product.woocommerceId }}</td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    {% if product.imageUrl %}
                                                                        <img src="{{ product.imageUrl }}" alt="{{ product.name }}" 
                                                                             class="mr-2" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
                                                                    {% else %}
                                                                        <div class="bg-light text-center" style="width: 40px; height: 40px; line-height: 40px; margin-right: 10px;">
                                                                            <i class="fas fa-image text-muted"></i>
                                                                        </div>
                                                                    {% endif %}
                                                                    <div>{{ product.name }}</div>
                                                                </div>
                                                            </td>
                                                            <td>{{ product.updatedAt|date('Y-m-d H:i:s') }}</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <a href="{{ path('app_woocommerce_sync', {'id': product.id}) }}" 
                                                                       class="btn btn-sm btn-outline-primary">
                                                                        <i class="fas fa-sync"></i> Sync
                                                                    </a>
                                                                    <a href="{{ path('app_woocommerce_diagnostic', {'product_id': product.woocommerceId}) }}" 
                                                                       class="btn btn-sm btn-outline-secondary" 
                                                                       title="Diagnose connection issues">
                                                                        <i class="fas fa-wrench"></i>
                                                                    </a>
                                                                    <a href="{{ path('app_ai_generate', {'id': product.id}) }}" 
                                                                       class="btn btn-sm btn-outline-success">
                                                                        <i class="fas fa-robot"></i> Generate
                                                                    </a>
                                                                    <button type="button" class="btn btn-sm btn-outline-info preview-product" 
                                                                           data-product-id="{{ product.woocommerceId }}" title="Preview Product">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Staged Products Tab -->
                            <div class="tab-pane fade" id="staged" role="tabpanel" aria-labelledby="staged-tab">
                                <form id="stagedForm" method="post" action="{{ path('app_woocommerce_delete') }}">
                                    <div class="mb-3 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="selectAllStaged">
                                            <label class="form-check-label" for="selectAllStaged">
                                                Select All Products
                                            </label>
                                        </div>
                                        <button type="submit" class="btn btn-danger" id="deleteStagedBtn" disabled>
                                            <i class="fas fa-trash"></i> Delete Selected
                                            <span id="selectedStagedCount" class="badge bg-light text-dark ms-1">(0)</span>
                                        </button>
                                    </div>
                                    
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th style="width: 40px;"></th>
                                                    <th>ID</th>
                                                    <th>WooCommerce ID</th>
                                                    <th>Name</th>
                                                    <th>AI Processed</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set stagedProducts = products|filter(p => p.status == 'ai_processed') %}
                                                {% if stagedProducts is empty %}
                                                    <tr>
                                                        <td colspan="6" class="text-center py-4">
                                                            <p class="text-muted mb-0">No products in staging. Process products with AI first.</p>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    {% for product in stagedProducts %}
                                                        <tr>
                                                            <td>
                                                                <div class="form-check">
                                                                    <input class="form-check-input staged-checkbox" 
                                                                           type="checkbox" name="product_ids[]" 
                                                                           value="{{ product.id }}" id="staged_{{ product.id }}">
                                                                </div>
                                                            </td>
                                                            <td>{{ product.id }}</td>
                                                            <td>{{ product.woocommerceId }}</td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    {% if product.imageUrl %}
                                                                        <img src="{{ product.imageUrl }}" alt="{{ product.name }}" 
                                                                             class="mr-2" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
                                                                    {% else %}
                                                                        <div class="bg-light text-center" style="width: 40px; height: 40px; line-height: 40px; margin-right: 10px;">
                                                                            <i class="fas fa-image text-muted"></i>
                                                                        </div>
                                                                    {% endif %}
                                                                    <div>{{ product.name }}</div>
                                                                </div>
                                                            </td>
                                                            <td>{{ product.updatedAt|date('Y-m-d H:i:s') }}</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <a href="{{ path('app_ai_generate', {'id': product.id, 'edit': true}) }}" 
                                                                       class="btn btn-sm btn-outline-primary">
                                                                        <i class="fas fa-edit"></i> Edit
                                                                    </a>
                                                                    <a href="{{ path('app_woocommerce_export', {'id': product.id}) }}" 
                                                                       class="btn btn-sm btn-outline-success">
                                                                        <i class="fas fa-upload"></i> Export to Shop
                                                                    </a>
                                                                    <button type="button" class="btn btn-sm btn-outline-info preview-product" 
                                                                           data-product-id="{{ product.woocommerceId }}" title="Preview Product">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Exported Products Tab -->
                            <div class="tab-pane fade" id="exported" role="tabpanel" aria-labelledby="exported-tab">
                                <form id="deleteForm" method="post" action="{{ path('app_woocommerce_delete') }}">
                                    <div class="mb-3 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="selectAllExported">
                                            <label class="form-check-label" for="selectAllExported">
                                                Select All Products
                                            </label>
                                        </div>
                                        <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                            <i class="fas fa-trash"></i> Delete Selected
                                            <span id="selectedDeleteCount" class="badge bg-light text-dark ms-1">(0)</span>
                                        </button>
                                    </div>
                                    
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th style="width: 40px;"></th>
                                                    <th>ID</th>
                                                    <th>WooCommerce ID</th>
                                                    <th>Name</th>
                                                    <th>Exported On</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set exportedProducts = products|filter(p => p.status == 'exported') %}
                                                {% if exportedProducts is empty %}
                                                    <tr>
                                                        <td colspan="6" class="text-center py-4">
                                                            <p class="text-muted mb-0">No products have been exported yet.</p>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    {% for product in exportedProducts %}
                                                        <tr>
                                                            <td>
                                                                <div class="form-check">
                                                                    <input class="form-check-input exported-checkbox" 
                                                                           type="checkbox" name="product_ids[]" 
                                                                           value="{{ product.id }}" id="exported_{{ product.id }}">
                                                                </div>
                                                            </td>
                                                            <td>{{ product.id }}</td>
                                                            <td>{{ product.woocommerceId }}</td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    {% if product.imageUrl %}
                                                                        <img src="{{ product.imageUrl }}" alt="{{ product.name }}" 
                                                                             class="mr-2" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;">
                                                                    {% else %}
                                                                        <div class="bg-light text-center" style="width: 40px; height: 40px; line-height: 40px; margin-right: 10px;">
                                                                            <i class="fas fa-image text-muted"></i>
                                                                        </div>
                                                                    {% endif %}
                                                                    <div>{{ product.name }}</div>
                                                                </div>
                                                            </td>
                                                            <td>{{ product.updatedAt|date('Y-m-d H:i:s') }}</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <a href="{{ path('app_woocommerce_sync', {'id': product.id}) }}" 
                                                                       class="btn btn-sm btn-outline-primary">
                                                                        <i class="fas fa-sync"></i> Sync
                                                                    </a>
                                                                    <a href="{{ path('app_woocommerce_diagnostic', {'product_id': product.woocommerceId}) }}" 
                                                                       class="btn btn-sm btn-outline-secondary" 
                                                                       title="Diagnose connection issues">
                                                                        <i class="fas fa-wrench"></i>
                                                                    </a>
                                                                    <a href="{{ product.storeUrl }}/wp-admin/post.php?post={{ product.woocommerceId }}&action=edit" 
                                                                       target="_blank" class="btn btn-sm btn-outline-secondary">
                                                                        <i class="fas fa-external-link-alt"></i> View in WooCommerce
                                                                    </a>
                                                                    <button type="button" class="btn btn-sm btn-outline-info preview-product" 
                                                                           data-product-id="{{ product.woocommerceId }}" title="Preview Product">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <div>
                                <a href="{{ path('app_woocommerce_import') }}" class="btn btn-primary">
                                    <i class="fas fa-download"></i> Import More Products
                                </a>
                            </div>
                            <div class="text-muted">
                                Total Products: {{ products|length }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Regular vs Premium Accounts</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card h-100 border-info">
                                <div class="card-header bg-info bg-opacity-10">
                                    <h5 class="card-title mb-0"><i class="fas fa-robot me-2"></i> Regular Account</h5>
                                </div>
                                <div class="card-body">
                                    <h6 class="mb-3">Standard Features:</h6>
                                    <ul class="list-group mb-3">
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-check text-success me-2"></i> Target Keyphrase Generation
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-check text-success me-2"></i> Meta Title Creation
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-check text-success me-2"></i> Product Descriptions
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-check text-success me-2"></i> Short Descriptions
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-check text-success me-2"></i> Meta Descriptions
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-check text-success me-2"></i> Image Alt Text
                                        </li>
                                    </ul>
                                    <p class="card-text">
                                        <i class="fas fa-info-circle text-info me-2"></i>
                                        Uses GPT-3.5 Turbo model (0.5 credits per generation)
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-primary bg-opacity-10">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-crown text-primary me-2"></i> Premium Account
                                        {% if is_granted('ROLE_PREMIUM') %}
                                            <span class="badge bg-success ms-2">Activated</span>
                                        {% else %}
                                            <span class="badge bg-secondary ms-2">Upgrade Required</span>
                                        {% endif %}
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <h6 class="mb-3">All Regular Features Plus:</h6>
                                    <ul class="list-group mb-3">
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-star text-warning me-2"></i> Enhanced Prompts
                                            <span class="ms-auto badge bg-primary">Premium</span>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-star text-warning me-2"></i> SEO Keywords Extraction
                                                <span class="ms-auto badge bg-primary">Premium</span>
                                            </div>
                                            <div class="text-muted small mt-1">
                                                Comprehensive list of 15-20 SEO keywords with search intent grouping to improve search rankings
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-star text-warning me-2"></i> Social Media Post Creation
                                                <span class="ms-auto badge bg-primary">Premium</span>
                                            </div>
                                            <div class="text-muted small mt-1">
                                                Ready-to-use social media content with engaging copy, hashtags, and calls-to-action
                                            </div>
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-star text-warning me-2"></i> Custom Tone Selection
                                            <span class="ms-auto badge bg-primary">Premium</span>
                                        </li>
                                        <li class="list-group-item d-flex align-items-center">
                                            <i class="fas fa-star text-warning me-2"></i> Competitor URL Analysis
                                            <span class="ms-auto badge bg-primary">Premium</span>
                                        </li>
                                    </ul>
                                    <p class="card-text">
                                        <i class="fas fa-bolt text-warning me-2"></i>
                                        Uses GPT-4 Turbo model (1 credit per generation)
                                    </p>
                                    {% if not is_granted('ROLE_PREMIUM') %}
                                        <div class="d-grid gap-2">
                                            <a href="{{ path('app_subscription_plans') }}" class="btn btn-primary">
                                                <i class="fas fa-crown me-2"></i> Upgrade to Premium
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block additional_modals %}
<!-- Product Preview Modal -->
<div class="modal fade" id="productPreviewModal" tabindex="-1" aria-labelledby="productPreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="productPreviewModalLabel">Product Preview</h5>
                <div>
                    <button type="button" class="btn btn-light btn-sm me-2" id="refreshPreviewBtn" title="Refresh product data">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
            <div class="modal-body">
                <div id="productPreviewLoader" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading product details...</p>
                </div>
