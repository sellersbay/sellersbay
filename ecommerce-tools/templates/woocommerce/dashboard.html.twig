            product.meta_data.forEach(meta => {
                if (meta.key && !meta.key.startsWith('_')) {
                    const value = typeof meta.value === 'object' ? JSON.stringify(meta.value) : meta.value;
                    html += `<tr><td><code>${meta.key}</code></td><td>${value || '<em>empty</em>'}</td></tr>`;
                }
            });
            
            if (html) {
                metadataEl.innerHTML = html;
            } else {
                metadataEl.innerHTML = '<tr><td colspan="2" class="text-center">No visible metadata available</td></tr>';
            }
        } else {
            metadataEl.innerHTML = '<tr><td colspan="2" class="text-center">No metadata available</td></tr>';
        }
    }
    
    // Helper function to safely set text content
    function setElementText(id, text) {
        const element = document.getElementById(id);
        if (element) element.textContent = text;
    }
    
    // Helper function to safely set HTML content
    function setElementHTML(id, html) {
        const element = document.getElementById(id);
        if (element) element.innerHTML = html;
    }
    
    // Helper function to format price
    function formatPrice(price) {
        if (!price) return 'N/A';
        try {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD'
            }).format(price);
        } catch (e) {
            console.error('Error formatting price:', e);
            return '$' + (parseFloat(price) || 0).toFixed(2);
        }
    }
    
    // Initialize checkbox functionality for each tab
    function initializeCheckboxes(selectAllId, checkboxClass, buttonId, countId, formId) {
        const selectAllCheckbox = document.getElementById(selectAllId);
        if (!selectAllCheckbox) return;
        
        const checkboxes = document.querySelectorAll(checkboxClass);
        const actionButton = document.getElementById(buttonId);
        const countBadge = document.getElementById(countId);
        
        function updateCount() {
            const checkedBoxes = document.querySelectorAll(`${checkboxClass}:checked`);
            const count = checkedBoxes.length;
            
            if (countBadge) {
                countBadge.textContent = `(${count})`;
            }
            
            if (actionButton) {
                actionButton.disabled = count === 0;
            }
        }
        
        selectAllCheckbox.addEventListener('change', function() {
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateCount();
        });
        
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                if (!this.checked) {
                    selectAllCheckbox.checked = false;
                } else if (document.querySelectorAll(`${checkboxClass}:not(:checked)`).length === 0) {
                    selectAllCheckbox.checked = true;
                }
                updateCount();
            });
        });
        
        updateCount();
        
        const form = document.getElementById(formId);
        if (form) {
            form.addEventListener('submit', function(e) {
                const checkedBoxes = document.querySelectorAll(`${checkboxClass}:checked`);
                if (checkedBoxes.length === 0) {
                    e.preventDefault();
                    return;
                }
                
                actionButton.disabled = true;
                actionButton.innerHTML = buttonId === 'processAiBtn'
                    ? '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...'
                    : '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deleting...';
            });
        }
    }
    
    // Initialize all checkbox functionalities
    initializeCheckboxes('selectAllImported', '.product-checkbox', 'processAiBtn', 'selectedCount', 'processForm');
    initializeCheckboxes('selectAllImported', '.product-checkbox', 'deleteImportedBtn', 'selectedDeleteImportedCount', 'processForm');
    initializeCheckboxes('selectAllStaged', '.staged-checkbox', 'deleteStagedBtn', 'selectedStagedCount', 'stagedForm');
    initializeCheckboxes('selectAllExported', '.exported-checkbox', 'deleteBtn', 'selectedDeleteCount', 'deleteForm');
});
