{% extends 'base.html.twig' %}

{% block title %}Access Denied - RoboSEO{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h3 mb-0">Access Denied</h1>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                        <h2 class="h4">You don't have permission to access this page</h2>
                        <p class="text-muted">
                            Sorry, but you don't have the necessary permissions to view the requested page.
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_dashboard') }}" class="btn btn-primary">
                            Return to Dashboard
                        </a>
                        
                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary">
                                Logout
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">
                                Login with Different Account
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %}