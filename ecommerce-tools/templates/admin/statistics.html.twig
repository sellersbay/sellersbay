    document.querySelectorAll('.date-range-selector .btn-group .btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Get the selected range
            const range = this.textContent.trim();
            
            // Submit the range via a form
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '{{ path('app_admin_set_date_range') }}';
            
            // Add CSRF token
            const csrfToken = document.createElement('input');
            csrfToken.type = 'hidden';
            csrfToken.name = '_csrf_token';
            csrfToken.value = '{{ csrf_token('set_date_range') }}';
            form.appendChild(csrfToken);
            
            // Add range
            const rangeInput = document.createElement('input');
            rangeInput.type = 'hidden';
            rangeInput.name = 'range';
            rangeInput.value = range;
            form.appendChild(rangeInput);
            
            // Submit form
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        });
    });
