{% extends 'base.html.twig' %}

{% block title %}System Statistics - Admin - RoboSEO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-nav .nav-link {
            color: #4e73df;
            padding: 1rem;
            border-radius: 0.35rem;
            margin-bottom: 0.5rem;
            transition: all 0.2s;
        }
        
        .admin-nav .nav-link:hover {
            background-color: #eaecf4;
        }
        
        .admin-nav .nav-link.active {
            background-color: #4e73df;
            color: white;
        }
        
        .admin-nav .nav-link i {
            margin-right: 0.5rem;
        }
        
        .stats-card {
            border-left: 4px solid #4e73df;
            transition: transform 0.2s;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
        }
        
        .stats-card.users { border-left-color: #4e73df; }
        .stats-card.revenue { border-left-color: #1cc88a; }
        .stats-card.products { border-left-color: #e74a3b; }
        .stats-card.content { border-left-color: #36b9cc; }
        
        .chart-card {
            margin-bottom: 1.5rem;
            transition: all 0.2s;
        }
        
        .chart-card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .stat-circle {
            height: 2.5rem;
            width: 2.5rem;
            border-radius: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .stat-circle.bg-users { background-color: rgba(78, 115, 223, 0.2); }
        .stat-circle.bg-revenue { background-color: rgba(28, 200, 138, 0.2); }
        .stat-circle.bg-products { background-color: rgba(231, 74, 59, 0.2); }
        .stat-circle.bg-content { background-color: rgba(54, 185, 204, 0.2); }
        
        .stat-circle i {
            color: #4e73df;
        }
        
        .stat-circle.bg-users i { color: #4e73df; }
        .stat-circle.bg-revenue i { color: #1cc88a; }
        .stat-circle.bg-products i { color: #e74a3b; }
        .stat-circle.bg-content i { color: #36b9cc; }
        
        .date-range-selector {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 1rem;
        }
        
        .date-range-selector .btn {
            margin-left: 0.5rem;
        }
        
        .dashboard-analytics-subtitle {
            font-size: 0.85rem;
            color: #888;
            margin-bottom: 1.5rem;
        }
        
        .key-metric {
            padding: 1rem;
            border-radius: 0.35rem;
            background-color: #f8f9fc;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }
        
        .key-metric-icon {
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
        }
        
        .key-metric-info h5 {
            margin-bottom: 0.25rem;
            font-size: 0.9rem;
            color: #5a5c69;
        }
        
        .key-metric-info .h2 {
            margin-bottom: 0;
            font-weight: 700;
        }
        
        .key-metric-info .trend {
            font-size: 0.8rem;
        }
        
        .key-metric-info .trend-up { color: #1cc88a; }
        .key-metric-info .trend-down { color: #e74a3b; }
        
        .top-metrics-container {
            display: flex;
            flex-wrap: wrap;
            margin: -0.5rem;
        }
        
        .metric-pill {
            background-color: #f8f9fc;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            margin: 0.5rem;
            font-size: 0.8rem;
            display: flex;
            align-items: center;
        }
        
        .metric-pill i {
            margin-right: 0.5rem;
            font-size: 0.8rem;
        }
        
        .metric-pill .number {
            font-weight: 700;
            margin-left: 0.5rem;
        }
    </style>
{% endblock %}

